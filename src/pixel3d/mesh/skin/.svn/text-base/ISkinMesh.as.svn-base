package cj7.mesh.skin
{
	import cj7.mesh.animation.IAnimateMesh;
	public interface ISkinMesh extends IAnimateMesh
	{
		function getJointCount () : int;
		function getJointName (index : int) : String;
		function getJointIndex (name : String) : int;
		function getAllJoints () : Array;
		function useAnimationFrom (mesh : ISkinMesh) : Boolean;
		function updateNormalsWhenAnimating (on : Boolean=false) : void;
		function setInterpolationMode (mode : int) : void;
		function animateMesh (frame : Number, blend : Number) : void;
		function skinMesh () : void;

		function finalize () : void;
		function createBuffer () : SkinMeshBuffer;
		function createJoint (parent : Joint = null) : Joint;
		function createPositionKey (joint : Joint) : PositionKey;
		function createScaleKey (joint : Joint) : ScaleKey;
		function createRotationKey (joint : Joint) : RotationKey;
		function createWeight (joint : Joint) : Weight;
	}
}
